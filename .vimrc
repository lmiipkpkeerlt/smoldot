syntax on
colo darkblue
hi Normal ctermbg=black
hi Visual ctermfg=blue ctermbg=white

"automatically insert line breaks at column tw
set tw=80

set expandtab       "tabs as spaces
"set noexpandtab    "tabs NOT as spaces

set tabstop=2
set shiftwidth=2
set clipboard^=unnamed
set mouse=a
set ai
set number
set hlsearch
set ruler
set ignorecase
set smartcase
